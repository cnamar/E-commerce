<section>
  <div class="container">
    <div class="row">
      <a href="/admin/add-products" class="btn btn-success ml-auto mt-3">Add
        product</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each laptops}}
          <tr>
            <th scope="row">1</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td><img
                style="height: 50px;"
                src="/product-images/{{this._id}}.jpg"
                alt="errr"
              /></td>
            <td><a
                class="nav-link btn-primary"
                href="/admin/edit-product?id={{this._id}}"
              >Edit</a></td>

            <td><a
                class="nav-link btn-danger"
                href="/admin/delete-product?id={{this._id}}"
                onclick="confirm('Do you want to delete {{this.name}}?')"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<section>
  <div class="container mt-4">
    <h1 class="text-centre">EDIT PRODUCT</h1>
    <div class="row">
      <div class="col-md-6">
        <form
          action="/admin/edit-product?id={{product._id}}"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="Name">Name</label>
            <input
              type="text"
              name="name"
              class="form-control"
              value="{{product.name}}"
            />
          </div>

          <div class="form-group">
            <label for="Category">Category</label>
            <input
              type="text"
              name="category"
              class="form-control"
              value="{{product.category}}"
            />
          </div>

          <div class="form-group">
            <label for="Description">Description</label>
            <input
              type="text"
              name="description"
              id="desc"
              class="form-control"
              value="{{product.description}}"
            />
          </div>
          <div class="form-group">
            <img
              id="productimage"
              style="height: 50px;"
              src="/product-images/{{id}}.jpg"
              alt="errr"
            />
          </div>
          <div class="form-group">
            <label for="imagecontrolfile">image file update</label>
            <input
              type="file"
              class="form-control-file"
              name="image"
              onchange="display(event)"
            />
          </div>

          <input type="submit" class="btn btn-primary" value="submit" />
        </form>
      </div>

    </div>
  </div>
</section>
<script>
  function display(event) {
  document.getElementById("productimage").src=URL.createObjectURL(event.target.files[0]);
  }
</script>